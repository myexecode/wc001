page{
    width: 100%;
    height: 100vh;
    overflow: hidden;
    position: relative;
}
.home_page{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.refresh_wrap{
    flex: 1;
    overflow: hidden;
}
.full_screen_cover{
    width: 100vw;
    height: 100vh;
    position: absolute;
    left: 0;
    top: 0;
    background: rgba(0,0,0,0.5);
}

::-webkit-scrollbar{
    width: 0;
    height: 0;
    background: transparent;
}