/* pages/home/home.wxss */
.img_wrap{
  width: 100%;
  height: 500rpx;
  position: relative;
}
image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.share_btn{
  position: absolute;
  right: 50rpx;
  bottom: -50rpx;
  padding: 20rpx 20rpx;
  background: #ff0;
  border-radius: 50%;
  overflow: hidden;
}
.canvas_wrap{
  /* display: none; */
  width: 700rpx;
  height: 900rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: 20rpx auto;
  background: #999;
}
.save_btn{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  bottom: -150rpx;
  background: rgba(0, 0, 0,.3);
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  transform: translateX(-50%);
  border-radius: 50%;
}
.off_btn{
  position:absolute;
  right: 0;
  bottom: 0;
}