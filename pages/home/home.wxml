<view class='home_page'>
    <!-- 自定义导航条 -->
    <m-navbar />

    <!-- 内容区 -->
    <m-refresh id="refresh_wrap_id" 
        class="refresh_wrap" 
        bind:pullDownRefreshEvent="onPullDownRefreshEvent"
        downRefreshDistance="{{50}}"
